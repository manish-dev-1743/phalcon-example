    $(document).ready(function() {

        $('#register-tab').click(function() {
            // $('form#logfrm')[0].reset();
            $('#signin-tab').removeClass('active');

            $('#register-tab').addClass('active');
            


        })
        $('#signin-tab').click(function() {

            $('#register-tab').removeClass('active');
            $('#siup').trigger("reset");
            $('#signin-tab').addClass('active');


        })


        $('#loginbtn').click(function() {
            var email = $('#email').val();
            var password = $('#password').val();
            $.ajax({
                url: 'auth/login',
                type: 'POST',
                data: {
                    'email': email,
                    'password': password
                },

                cache: false,
                success: function(res) {
                        // console.log(res)
                    if (res.status == 'ERROR') {
                        var mess = res.messages;

                        $('span#message').html(mess);
                        
                        $('form#logfrm')[0].reset();
                        

                    } else {
                        if (res.id == null || res.id == '') {
                            window.location.href = '/';
                        } else {
                            window.location.href = res.loc;
                        }

                    }
                },

            });

        });

        $('#signupBtn').click(function() {
            var name = $('#nam').val();
            var email = $('#em').val();
            var password = $('#pass').val();
            var re_pass = $('#re_pass').val();

            $.ajax({
                url: 'auth/adduser',
                type: 'POST',
                data: {
                    'name': name,
                    'email': email,
                    'password': password,
                    're_pass': re_pass,
                },

                cache: false,
                success: function(res) {
                    $('#nam').val() = '';
                    $('#em').val() = '';
                    $('#pass').val() = '';
                    $('#re_pass').val() = '';
                    if (res.status = 'SUCCESS') {
                        $('#signin-modal').modal('hide');
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: res.message,
                            showConfirmButton: false,
                            timer: 1500
                        })
                    } else {
                        $('span#errmsg').html(res.message);

                        setTimeout(function() {
                            $("span#errmsg").remove();
                        }, 5000)
                    }

                },

            });

        });

        $('#forpass').click(function() {
            $('#signin-modal').modal('hide');
            $('#forgotpass-modal').modal('show');
        });
        $('#forgPassBtn').click(function() {
            var em = $('#ema').val();

            $.ajax({
                url: 'auth/forgotpass',
                type: 'POST',
                data: {
                    'email': em
                },
                cache: false,
                success: function(res) {
                    console.log(res)
                    if (res.status == 'SUCCESS') {
                        $('#forgotpass-modal').modal('hide');
                        $('#verify-modal').modal('show');
                        $('#verusid').val(res.id);
                    } else {
                        $('span#errms').html(res.message);
                    }
                }
            })
        });


        $("#codeBtn").click(function() {
            cd = $('#code').val();
            id = $('#verusid').val();
            $.ajax({
                url: 'auth/codever',
                type: 'POST',
                data: {
                    'code': cd,
                    'id': id
                },
                success: function(res){
                    if(res.status == 'ERROR'){
                        $('span#erorrms').html(res.message);
                    }else{
                        $('#verify-modal').modal('hide');
                        $('#changepass-modal').modal('show');
                        $('#usid').val(res.id);
                        $('#succmessg').html(res.message);
                    }   
                }
            });

        });


        $('#changepassBtn').click(function(){
            newpass = $('#newpass').val();
            repass = $('#repass').val();
            usid = $('#usid').val();
            $.ajax({
                url: 'auth/chpa',
                type: 'POST',
                data: {
                    'id' : usid,
                    'newpass' : newpass,
                    'repass' : repass,
                },
                cache: false,
                success: function(res){
                   
                    if(res.status == "ERROR"){
                        $('#errrms').html(res.message);
                    }else{
                        console.log(res.status);
                        $('#changepass-modal').modal('hide');
                        $('#signin-modal').modal('show');
                        $('span#message').html(res.message);

                    }
                },
            });
        });



    });





    

